    <style>
        .form-container {
            /* Your existing styles for the form container */
            /* Add styles for blurring background */
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(5px);
            z-index: 1;
            display: none;
        }

        .form-container form {
            /* Your existing styles for the form */
            /* Add styles to make the form look like a grid */
            display: grid;
            gap: 10px;
            grid-template-columns: 1fr;
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f1f1f1;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        /* Style for the form input */
        .form-container input[type="text"] {
            padding: 15px; /* Increase padding */
            width: 100%; /* Take full width */
            border: 2px solid #ccc; /* Add border */
            border-radius: 5px;
            font-size: 16px;
            grid-column: 1 / -1;
        }

        /* Style for the form submit button */
        .form-container input[type="submit"] {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            background-color: transparent; /* Set background to transparent */
            color: #007bff; /* Text color */
            font-size: 16px;
            cursor: pointer;
            transition: color 0.2s ease-in-out;
            grid-column: 1 / -1;
            border: 2px solid #007bff; /* Add border to create a button-like appearance */
        }

        /* Change the color of the button text on hover */
        .form-container input[type="submit"]:hover {
            color: #0056b3;
            
        }

        /* Style for the close button */
        .form-container .close-form {
            position: absolute;
            top: 15px;
            right: 35%;
            font-size: 24px;
            cursor: pointer;
            color: #333;
        }

        /* Style for the device grid container */
        .device-grid {
            display: grid;
            gap: 10px;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            padding: 20px;
        }

        /* Style for each device box */
        .device-box {
            background-color: #f1f1f1;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            text-align: center;
            font-size: 18px;
            color: #333;
        }
        .card_btn{
            border: none;
            width:200px;
            height: 50px;
            background-color: white;
        }

        .delete-button {
            background-color: #e9e1e2;
            color: #000000;
            border: none;
            margin-left: 20px;
        }

        /* showbutton */

        .delete-button,
        .show-button {
            padding: 8px 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 5px;
        }

        .delete-button {
            background-color: #dc3545;
            color: #fff;
        }

        .show-button {
            background-color: #007bff;
            color: #fff;
        }
        .sk{
            background-color: #4093eb;
            border-radius: 10px;
            padding: 10px;
            border: none;
            color: white;
        }

    </style>

