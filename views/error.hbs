        .show-button {
            padding: 8px 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 5px;
        }

        .delete-button {
            background-color: #dc3545;
            color: #fff;
        }

        .show-button {
            background-color: #007bff;
            color: #fff;
        }

    </style>

